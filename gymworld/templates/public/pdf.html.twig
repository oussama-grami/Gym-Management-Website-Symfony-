{% extends 'base.html.twig' %}

{% block title %}
    <title>Card Example</title>
{% endblock %}
{% block stylesheets %}
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@300&display=swap" rel="stylesheet">
<style>
    body {
        font-family: "Roboto", sans-serif;
        margin: 0;
        padding: 0;

    }
    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .card {
        background-color: white;
        border-radius: 10px;
        border-color: grey;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 300px;
        display:flex;
        background-color: black;


    }
    .card img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    .card-content {
        padding: 20px;
    }
    .card-content h2 {
        color:white;
        margin-top: 0;
        font-family: "Roboto Condensed", sans-serif;
        font-size: 24px;
    }
    .card-content p {
        margin-bottom: 0;
        font-size: 16px;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }


</style>
{% endblock %}
{% block body %}
    <main>
        <div class="card">
            <div class="card-content">
                <h2>Access Card</h2>
                <p>Id : <span> {{ personne.id }}</span></p>
                <p>Name : <span>{{  personne.name  }}</span></p>
                <p>Phone : <span>{{ personne.phoneNumber }}</span></p>
                <p>Email : <span>{{ personne.email }}</span></p>
            </div>
        </div>
    </main>
{% endblock %}

